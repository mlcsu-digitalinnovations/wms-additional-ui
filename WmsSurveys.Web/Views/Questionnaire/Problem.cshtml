@model WmsReferral.Business.Models.QuestionnaireViewModel;

@{
    ViewData["Title"] = "Error: Something has gone wrong";
    Layout = "~/Views/Shared/_Layout.cshtml";


}


<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-full">
        <div class="nhsuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1">
            <h1 class="nhsuk-error-summary__title" id="error-summary-title">
                Something went wrong
            </h1>
                       

            <div class="nhsuk-error-summary__body">
                <p>There was a problem with the questionnaire, you could either try the link again or get in touch.</p>
               
                <p>
                    Please contact the MLCSU Referral Management
                    Centre using the details below.
                </p>
                <p>Referral Management Services Enquiries : <a href="tel:+441772660010">01772 660 010</a></p>

                <strong>
                    <p>Questionnaire Reference: @Model.NotificationKey</p>
                </strong>
                <hr />
                @{
                    if (Model.ApiErrors != null)
                        if (Model.ApiErrors.TryGetValue("Detail", out var detail))
                        {
                            <h4>Errors:</h4>
                            <p>@detail</p>
                            <div class="nhsuk-action-link">
                                <a class="nhsuk-action-link__link" href="/@Model.QuestionnaireRequested/@Model.NotificationKey/Begin">
                                    <svg class="nhsuk-icon nhsuk-icon__arrow-right-circle" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
                                        <path d="M0 0h24v24H0z" fill="none"></path>
                                        <path d="M12 2a10 10 0 0 0-9.95 9h11.64L9.74 7.05a1 1 0 0 1 1.41-1.41l5.66 5.65a1 1 0 0 1 0 1.42l-5.66 5.65a1 1 0 0 1-1.41 0 1 1 0 0 1 0-1.41L13.69 13H2.05A10 10 0 1 0 12 2z"></path>
                                    </svg>
                                    <span class="nhsuk-action-link__text">Retry</span>
                                </a>
                            </div>

                        }
                }

            </div>

        </div>
    </div>
</div>
