@model WmsReferral.Business.Models.ErrorViewModel;
@using System.Net
@{
    ViewData["Title"] = (HttpStatusCode)Model.StatusCode;
    Layout = "~/Views/Shared/_Layout.cshtml";
    Context.Response.StatusCode = Model.StatusCode;
    

}


<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">


        @if (Model.StatusCode == 404)
        {
            <h2 class="nhsuk-heading-xl nhsblue">Page not found</h2>

            <div class="nhsuk-error-summary__body">
                <p>If you typed the web address, check it is correct.</p>
                <p>If you pasted the web address, check you copied the entire address.</p>
                <p>
                    If the web address is correct or you selected a link or button and are still experiencing issues,
                    please contact the MLCSU Referral Management Centre using the details below.
                </p>
                <p>Referral Management Services Enquiries : <a href="tel:+441772660010">01772 660 010</a></p>
                @if (Model.ShowRequestId)
                {
                    <strong>
                        <p>Reference: @Model.TraceId</p>
                    </strong>
                }

            </div>
        }
        else
        {
            <h1 class="nhsuk-error-summary__title" id="error-summary-title">
                Something went wrong
            </h1>
            @if (Model.ShowErrorMessage)
            {
                <p>
                    <strong>
                        @Model.Message
                    </strong>
                </p>
            }
            <div class="nhsuk-error-summary__body">
                <p>
                    If you are experiencing any issues, please contact the MLCSU Referral Management
                    Centre using the details below.
                </p>
                <p>Referral Management Services Enquiries : <a href="tel:+441772660010">01772 660 010</a></p>
                @if (Model.ShowRequestId)
                {
                    <strong>
                        <p>Reference: @Model.TraceId</p>
                    </strong>
                }

            </div>
        }



        <div class="nhsuk-action-link">
            <a class="nhsuk-action-link__link" href="/">
                <svg class="nhsuk-icon nhsuk-icon__arrow-right-circle" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M0 0h24v24H0z" fill="none"></path>
                    <path d="M12 2a10 10 0 0 0-9.95 9h11.64L9.74 7.05a1 1 0 0 1 1.41-1.41l5.66 5.65a1 1 0 0 1 0 1.42l-5.66 5.65a1 1 0 0 1-1.41 0 1 1 0 0 1 0-1.41L13.69 13H2.05A10 10 0 1 0 12 2z"></path>
                </svg>
                <span class="nhsuk-action-link__text">Try again</span>
            </a>
        </div>

    </div>
</div>
