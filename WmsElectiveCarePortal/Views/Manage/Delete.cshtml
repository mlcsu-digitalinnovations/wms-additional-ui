@model UserModel
@using WmsReferral.Business.Helpers
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";

    bool hasErrors = ViewData.ModelState.ErrorCount > 0;
    bool DisplayNameError = false;
    bool GivenNameError = false;
    bool SurnameError = false;
    bool ODSCodeError = false;
    bool OrgNameError = false;
    bool AccountEnabledError = false;

}

<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-full">
        <div class="nhsuk-back-link">
            <a class="nhsuk-back-link__link" asp-action="index">
                <svg class="nhsuk-icon nhsuk-icon__chevron-left" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M8.5 12c0-.3.1-.5.3-.7l5-5c.4-.4 1-.4 1.4 0s.4 1 0 1.4L10.9 12l4.3 4.3c.4.4.4 1 0 1.4s-1 .4-1.4 0l-5-5c-.2-.2-.3-.4-.3-.7z"></path>
                </svg>
                Go back
            </a>
        </div>

        <div class="nhsuk-card wms-card">
            <div class="nhsuk-card__content">

                <h1 class="nhsuk-label-wrapper">
                    <span class="nhsuk-label nhsuk-label--l">
                        Delete User
                    </span>
                </h1>
                <fieldset id="fsDelete" class="nhsuk-fieldset nhsuk-u-padding-bottom-6">



                    <div class="@NhsFormHelper.GetFormElementClasses("form-group", DisplayNameError)">
                        <span class="nhsuk-error-message" id="input-with-error-message-error">
                            <span asp-validation-for="DisplayName">Enter the users full name</span>
                        </span>
                        <label class="nhsuk-label" asp-for="DisplayName">
                            Display name (users full name)
                        </label>
                        <input asp-for="DisplayName" disabled class="@NhsFormHelper.GetFormElementClasses("text", DisplayNameError) nhsuk-u-width-two-thirds" type="text" autocomplete="off" />
                    </div>

                    <div class="@NhsFormHelper.GetFormElementClasses("form-group", GivenNameError)">
                        <span class="nhsuk-error-message" id="input-with-error-message-error">
                            <span asp-validation-for="GivenName"></span>
                        </span>
                        <label class="nhsuk-label" asp-for="GivenName">
                            Given name
                        </label>
                        <input asp-for="GivenName" disabled class="@NhsFormHelper.GetFormElementClasses("text", GivenNameError) nhsuk-u-width-one-third" type="text" autocomplete="off" />
                    </div>

                    <div class="@NhsFormHelper.GetFormElementClasses("form-group", SurnameError)">
                        <span class="nhsuk-error-message" id="input-with-error-message-error">
                            <span asp-validation-for="Surname"></span>
                        </span>
                        <label class="nhsuk-label" asp-for="Surname">
                        </label>
                        <input asp-for="Surname" disabled class="@NhsFormHelper.GetFormElementClasses("text", SurnameError) nhsuk-u-width-one-third" type="text" autocomplete="off" />
                    </div>

                    <div class="@NhsFormHelper.GetFormElementClasses("form-group", SurnameError)">
                        <span class="nhsuk-error-message" id="input-with-error-message-error">
                            <span asp-validation-for="Identities.First().IssuerAssignedId"></span>
                        </span>
                        <label class="nhsuk-label" asp-for="Identities.First().IssuerAssignedId">
                            Username
                        </label>
                        <input asp-for="Identities.First().IssuerAssignedId" disabled class="@NhsFormHelper.GetFormElementClasses("text", SurnameError) nhsuk-u-width-two-thirds" type="text" autocomplete="off" />
                    </div>

                    <div class="@NhsFormHelper.GetFormElementClasses("form-group", ODSCodeError)">
                        <span class="nhsuk-error-message" id="input-with-error-message-error">
                            <span asp-validation-for="OdsCode"></span>
                        </span>
                        <label class="nhsuk-label" asp-for="OdsCode">
                            ODS Code
                        </label>
                        <input asp-for="OdsCode" disabled class="@NhsFormHelper.GetFormElementClasses("text", ODSCodeError) nhsuk-input--width-5" type="text" autocomplete="off" />
                    </div>

                    <div class="@NhsFormHelper.GetFormElementClasses("form-group", OrgNameError)">
                        <span class="nhsuk-error-message" id="input-with-error-message-error">
                            <span asp-validation-for="OrgName"></span>
                        </span>
                        <label class="nhsuk-label" asp-for="OrgName">
                            Organisation
                        </label>
                        <input asp-for="OrgName" disabled class="@NhsFormHelper.GetFormElementClasses("text", OrgNameError) nhsuk-u-width-full" type="text" autocomplete="off" />
                    </div>

                    <div class="@NhsFormHelper.GetFormElementClasses("form-group", AccountEnabledError)">

                        <div class="nhsuk-checkboxes">
                            <div class="nhsuk-checkboxes__item">

                                <input asp-for="AccountEnabled" disabled class="nhsuk-checkboxes__input" type="checkbox" />

                                <label class="nhsuk-label nhsuk-checkboxes__label" asp-for="AccountEnabled">
                                    Account enabled
                                </label>

                            </div>
                        </div>
                    </div>
                </fieldset>
                <div id="nhsuk-notification" class="nhsuk-notification-banner nhsuk-notification-banner--success nhsuk-u-visually-hidden" role="region" aria-labelledby="nhsuk-notification-banner-title" data-module="nhsuk-notification-banner">
                    <div class="nhsuk-notification-banner__header">
                        <h2 class="nhsuk-notification-banner__title" id="nhsuk-notification-banner-title">
                            <span id="MessageTitle"></span>
                        </h2>
                    </div>
                    <div class="nhsuk-notification-banner__content">
                        <div id="MessageText"></div>
                    </div>
                </div>

                <div class="form-group">
                    <button type="button" class="nhsuk-button deleteUser" data-userid=@Model.Id.ToString()>
                        Delete User
                    </button>
                </div>


            </div>
        </div>
        <div class="nhsuk-back-link">
            <a class="nhsuk-back-link__link" asp-action="index">
                <svg class="nhsuk-icon nhsuk-icon__chevron-left" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M8.5 12c0-.3.1-.5.3-.7l5-5c.4-.4 1-.4 1.4 0s.4 1 0 1.4L10.9 12l4.3 4.3c.4.4.4 1 0 1.4s-1 .4-1.4 0l-5-5c-.2-.2-.3-.4-.3-.7z"></path>
                </svg>
                Go back
            </a>
        </div>
    </div>

</div>

<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-full">
        <div id="Message"></div>
    </div>
</div>





@section scripts{
    <script type="text/javascript" src="/js/Manage/b2cService.js"></script>
}