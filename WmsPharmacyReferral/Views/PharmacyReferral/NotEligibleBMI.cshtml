@{ 
   ViewData["Title"] = "You are not eligible for this programme";
   Layout = "~/Views/Shared/_Layout.cshtml"; 
}
<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-full">
        <div class="nhsuk-card wms-card">
            <div class="nhsuk-card__content">
                <h1 class="nhsuk-card__heading nhsuk-label--l">The patient's BMI is not within the eligibility range</h1>
                <p>
                    We’re pleased to tell you that the patient's BMI is not within the obesity range.
                    This means that the patient is not eligible for our programme at this time.
                </p>
                <p><a class="nhsuk-button" asp-action="index" asp-controller="PharmacyReferral">Continue</a></p>
            </div>
        </div>
    </div>
</div>