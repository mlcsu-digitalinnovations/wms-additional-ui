@model WmsMskReferral.Models.MskHubViewModel
@using WmsReferral.Business.Helpers
@{
    ViewData["Title"] = "Confirm MSK Hub";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-full">
        <div class="nhsuk-back-link">
            <a class="nhsuk-back-link__link" asp-action="select-msk-hub">
                <svg class="nhsuk-icon nhsuk-icon__chevron-left" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M8.5 12c0-.3.1-.5.3-.7l5-5c.4-.4 1-.4 1.4 0s.4 1 0 1.4L10.9 12l4.3 4.3c.4.4.4 1 0 1.4s-1 .4-1.4 0l-5-5c-.2-.2-.3-.4-.3-.7z"></path>
                </svg>
                Go back
            </a>
        </div>
        <div class="nhsuk-card wms-card">
            <div class="nhsuk-card__content">
                <h1 class="nhsuk-heading-m">
                    <label class="nhsuk-label nhsuk-label--m">
                        Check your MSK site details
                    </label>
                </h1>
               
                <form id="formEmail" asp-action="lookup-pharmacy">

                    <dl class="nhsuk-summary-list">
                        <div class="nhsuk-summary-list__row">
                        <dt class="nhsuk-summary-list__key">
                            ODS Code
                        </dt>
                        <dd class="nhsuk-summary-list__value">
                            @Html.DisplayFor(model => model.ODSCode)
                        </dd>
            </div>
            <div class="nhsuk-summary-list__row">
                <dt class="nhsuk-summary-list__key">
                    @Html.DisplayNameFor(model => model.ODSOrg.Name)
                </dt>
                <dd class="nhsuk-summary-list__value">
                    @Html.DisplayFor(model => model.ODSOrg.Name)
                </dd>
            </div>
            <div class="nhsuk-summary-list__row">
                <dt class="nhsuk-summary-list__key">
                    Address
                </dt>
                <dd class="nhsuk-summary-list__value">
                    @Html.DisplayFor(model => model.ODSOrg.AddrLn1)<br />
                    @Html.DisplayFor(model => model.ODSOrg.AddrLn2)<br />
                    @Html.DisplayFor(model => model.ODSOrg.Town)<br />
                    @Html.DisplayFor(model => model.ODSOrg.County)<br />
                    @Html.DisplayFor(model => model.ODSOrg.PostCode)<br />
                    @Html.DisplayFor(model => model.ODSOrg.Country)<br />

                </dd>
            </div>

            </dl>








            @*<input type="submit" id="btnSubmit" value="Continue" class="nhsuk-button" />*@
            <a class="nhsuk-button" asp-action="index" asp-controller="MskReferral">Continue</a>
            <a class="nhsuk-button nhsuk-button--secondary" asp-action="select-msk-hub">Reselect MSK hub</a>
            </form>

        </div>
    </div>
</div>
</div>


@section scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $("#btnSubmit").val("Continue");
            $("#formEmail").submit(function (e) {
                //disable the submit button
                $("#btnSubmit").attr("disabled", true);
                $("#btnSubmit").val("Checking...");
            });
        });
    </script>
}
