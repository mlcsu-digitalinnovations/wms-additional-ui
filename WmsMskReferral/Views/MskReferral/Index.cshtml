@model WmsMskReferral.Models.MskHubViewModel
@using WmsReferral.Business.Helpers
@{
    ViewData["Title"] = "MSK";
}
<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-full">



        <div class="nhsuk-card wms-card">
            
            <div class="nhsuk-card__content">
                <h1 class="nhsuk-heading-l">MSK Referral: Welcome</h1>

                <p>You are now authenticated with the NHS Digital Weight Management Programme for MSK and can proceed to add new referrals.</p>


                <form id="formEmail" asp-action="index">

                    <dl class="nhsuk-summary-list">
                        <div class="nhsuk-summary-list__row">
                        <dt class="nhsuk-summary-list__key">
                            ODS Code
                        </dt>
                        <dd class="nhsuk-summary-list__value">
                            @Html.DisplayFor(model => model.ODSCode)
                        </dd>
            </div>
            <div class="nhsuk-summary-list__row">
                <dt class="nhsuk-summary-list__key">
                    MSK
                </dt>
                <dd class="nhsuk-summary-list__value">
                    @Html.DisplayFor(model => model.ODSOrg.Name)
                </dd>
            </div>
            <div class="nhsuk-summary-list__row">
                <dt class="nhsuk-summary-list__key">
                    User
                </dt>
                <dd class="nhsuk-summary-list__value">
                    @Html.DisplayFor(model => model.EmailAddress)
                </dd>
            </div>

            </dl>


            <input asp-for="ODSCode" hidden />

            <a class="nhsuk-button" asp-action="consent-nhsnumber" asp-controller="MskReferral">New Referral</a>
            <input type="submit" id="btnSubmit" value="Log Out" class="nhsuk-button nhsuk-button--secondary" />

            </form>

        </div>
        </div>
    </div>
</div>
