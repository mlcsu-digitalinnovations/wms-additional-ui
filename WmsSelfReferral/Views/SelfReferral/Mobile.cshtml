@model WmsReferral.Business.Models.MobileViewModel
@using WmsReferral.Business.Helpers
@{
    ViewData["Title"] = "Mobile";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool hasErrors = ViewData.ModelState.ErrorCount > 0;

}

<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-full">

        <div class="nhsuk-back-link">
            <a class="nhsuk-back-link__link" asp-action="email-address">
                <svg class="nhsuk-icon nhsuk-icon__chevron-left" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M8.5 12c0-.3.1-.5.3-.7l5-5c.4-.4 1-.4 1.4 0s.4 1 0 1.4L10.9 12l4.3 4.3c.4.4.4 1 0 1.4s-1 .4-1.4 0l-5-5c-.2-.2-.3-.4-.3-.7z"></path>
                </svg>
                Go back
            </a>
        </div>

        <div class="nhsuk-card wms-card">
            <div class="nhsuk-card__content">
                <form asp-action="Mobile">
                    <fieldset class="nhsuk-fieldset nhsuk-u-padding-bottom-6"
                              aria-describedby="mobile-hint">
                        <h1 class="nhsuk-label-wrapper">
                            <label class="nhsuk-label nhsuk-label--l" asp-for="Mobile">
                            </label>
                        </h1>

                        <div class="@NhsFormHelper.GetFormElementClasses("form-group", hasErrors)">
                            <div class="nhsuk-hint" id="mobile-hint">
                                Enter a valid UK mobile phone number
                            </div>
                            <span class="nhsuk-error-message" id="input-with-error-message-error">
                                <span asp-validation-for="Mobile">Enter a UK mobile telephone number</span>
                            </span>

                            <input asp-for="Mobile" class="@NhsFormHelper.GetFormElementClasses("text", hasErrors)" type="tel" autocomplete="tel" />
                            <details class="nhsuk-details nhsuk-u-margin-top-3">
                                <summary class="nhsuk-details__summary">
                                    <span class="nhsuk-details__summary-text">
                                        Why is this field already populated?
                                    </span>
                                </summary>
                                <div class="nhsuk-details__text">

                                    <p>We've populated this field for you from your NHS login profile, if it's not correct you can change it.</p>
                                    <p>Please note that changing it here will not update your NHS login profile, only the phone number registered with our service.</p>
                                    <p>You can change the phone number registered with NHS login by selecting the 'Manage NHS login' link above.</p>
                                </div>
                            </details>
                        </div>

                    </fieldset>
                    <input type="submit" value="Continue" class="nhsuk-button" />

                </form>

            </div>
        </div>
    </div>
</div>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}