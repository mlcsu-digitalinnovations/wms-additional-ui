@model WmsReferral.Business.Models.NotEligibleViewModel
@{ 
   ViewData["Title"] = "You are not eligible for this programme";
   Layout = "~/Views/Shared/_Layout.cshtml"; 
}
<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-full">
        <div class="nhsuk-card wms-card">
            <div class="nhsuk-card__content">                
                <form asp-action="Cancel-Electivecare">
                    <h1 class="nhsuk-card__heading nhsuk-label--l">Your BMI is not within the eligibility range</h1>
                    <p>
                       Unfortunately your BMI is not within the range for the NHS Digital Weight Management Programme. 
                        This means that you are not eligible for our programme at this time. Please visit your GP for 
                        further support to help you continue your health and wellbeing journey.
                    </p>
                    <p>If you have answered this question incorrectly please 'Go back' and correct your height/weight, otherwise select 'End referral'.</p>
                    <p>
                        <input type="submit" value="End referral" class="nhsuk-button nhsuk-u-margin-right-2" />
                        <a class="nhsuk-button nhsuk-button--secondary" asp-action="height" asp-controller="SelfReferral">Go back</a>
                    </p>
                    <input asp-for="NonEligibiltyReason" hidden />
                </form>
            </div>
        </div>
    </div>
</div>