@model WmsSelfReferral.Models.NhsLoginViewModel
@using WmsReferral.Business.Helpers
@{
    ViewData["Title"] = "Elective Care referral";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
        <div class="nhsuk-u-margin-bottom-4">
            <h1 class="nhsuk-u-margin-bottom-0">Elective Care Referral</h1>
            <span class="nhsuk-caption-xl">
                @Html.DisplayFor(model => model.Given_name)
                @Html.DisplayFor(model => model.Family_name)
            </span>
        </div>
        <p class="nhsuk-u-margin-bottom-8">Your weight management application is ready for you to complete.</p>
        <div class="nhsuk-u-margin-bottom-8">
            <h2>Continue application</h2>
            <p>Please check the answers you previously gave as part of your Elective Care application, paying attention to anything that may have changed since.</p>
            
            <div class="nhsuk-action-link">
                <a class="nhsuk-action-link__link" asp-action="height" asp-controller="SelfReferral">
                    <svg class="nhsuk-icon nhsuk-icon__arrow-right-circle" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true" width="36" height="36">
                        <path d="M0 0h24v24H0z" fill="none"></path>
                        <path d="M12 2a10 10 0 0 0-9.95 9h11.64L9.74 7.05a1 1 0 0 1 1.41-1.41l5.66 5.65a1 1 0 0 1 0 1.42l-5.66 5.65a1 1 0 0 1-1.41 0 1 1 0 0 1 0-1.41L13.69 13H2.05A10 10 0 1 0 12 2z"></path>
                    </svg>
                    <span class="nhsuk-action-link__text">Continue Application</span>
                </a>
            </div>
        </div>
    </div>
</div>